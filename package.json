{
  "name": "greyhound-racing-predictor",
  "version": "1.0.0",
  "description": "AI-powered greyhound racing analysis and prediction system",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "test:e2e": "cypress run",
    "test:e2e:headless": "cypress run --headless",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:responsive": "playwright test tests/playwright/responsive-components.spec.js",
    "test:responsive:mobile": "playwright test tests/playwright/responsive-components.spec.js --project=chromium-mobile",
    "test:responsive:tablet": "playwright test tests/playwright/responsive-components.spec.js --project=chromium-tablet",
    "test:responsive:desktop": "playwright test tests/playwright/responsive-components.spec.js --project=chromium-desktop",
    "test:e2e:integration": "./run-e2e-tests.sh",
    "test:e2e:integration:rq": "BACKEND_TYPE=rq ./run-e2e-tests.sh",
    "test:e2e:integration:celery": "BACKEND_TYPE=celery ./run-e2e-tests.sh",
    "test:e2e:integration:headed": "HEADLESS=false ./run-e2e-tests.sh",
    "test:e2e:workflows": "playwright test tests/playwright/e2e/workflow-*.spec.js",
    "test:e2e:background": "playwright test tests/playwright/e2e/background-integration.spec.js",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:playwright",
    "test:integration:full": "npm run test:e2e:integration && npm run test:coverage",
    "build:css": "postcss static/css/main.css -o static/dist/css/bundle.css --use autoprefixer --use cssnano",
    "build:js": "terser static/js/main.js -o static/dist/js/bundle.js --compress --mangle",
    "build:assets": "npm run build:css && npm run build:js",
    "watch:css": "postcss static/css/main.css -o static/dist/css/bundle.css --use autoprefixer --watch",
    "watch:js": "terser static/js/main.js -o static/dist/js/bundle.js --compress --mangle --watch",
    "watch:assets": "npm run watch:css & npm run watch:js",
    "lint": "eslint static/js/**/*.js tests/**/*.js",
    "format": "prettier --write static/js/**/*.js tests/**/*.js"
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "papaparse": "^5.5.3",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-brands-svg-icons": "^7.0.0",
    "@fortawesome/free-regular-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "clean-css-cli": "^5.6.2",
    "cssnano": "^6.0.1",
    "cypress": "^13.6.0",
    "eslint": "^8.52.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.0",
    "terser": "^5.20.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!static/js/**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ]
  }
}
